<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>DemoServlet_Alias</servlet-name>
        <servlet-class>controller.DemoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MVCProductController</servlet-name>
        <servlet-class>controller.MVCProductController</servlet-class>
        <init-param>
            <param-name>URL</param-name>
            <param-value>abc</param-value>
        </init-param>
        <init-param>
            <param-name>userName</param-name>
            <param-value>sa</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>123456</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>MVCCustomerController</servlet-name>
        <servlet-class>controller.MVCCustomerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MVCStoreController</servlet-name>
        <servlet-class>controller.MVCStoreController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BillController</servlet-name>
        <servlet-class>controller.BillController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginCus</servlet-name>
        <servlet-class>controller.LoginCus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>controller.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterController</servlet-name>
        <servlet-class>controller.FilterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoreController</servlet-name>
        <servlet-class>controller.StoreController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DemoServlet_Alias</servlet-name>
        <url-pattern>/DemoServlet_URL1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MVCProductController</servlet-name>
        <url-pattern>/MVCProductController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MVCCustomerController</servlet-name>
        <url-pattern>/MVCCustomerController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MVCStoreController</servlet-name>
        <url-pattern>/MVCStoreController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BillController</servlet-name>
        <url-pattern>/BillController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginCus</servlet-name>
        <url-pattern>/LoginCus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterController</servlet-name>
        <url-pattern>/FilterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoreController</servlet-name>
        <url-pattern>/StoreController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
